<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authEntry">
    <fragment
        android:id="@+id/authEntry"
        android:name="com.hashdroid.shopit.ui.Auth.AuthEntry"
        android:label="fragment_auth_entry"
        tools:layout="@layout/fragment_auth_entry" >
        <action
            android:id="@+id/action_authEntry_to_signUp"
            app:destination="@id/signUp" />
        <action
            android:id="@+id/action_authEntry_to_signIn"
            app:destination="@id/signIn" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.hashdroid.shopit.ui.Auth.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_to_OTP_SignUp"
            app:destination="@id/OTP_SignUp" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.hashdroid.shopit.ui.Auth.SignIn"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" />
    <fragment
        android:id="@+id/OTP_SignUp"
        android:name="com.hashdroid.shopit.ui.Auth.OTP_SignUp"
        android:label="fragment_otp_signup"
        tools:layout="@layout/fragment_otp_signup" />
</navigation>