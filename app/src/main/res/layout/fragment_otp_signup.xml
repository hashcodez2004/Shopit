<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Auth.OTP_SignUp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/sign_in_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopit_logo"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/dp_127"
                android:foregroundGravity="center_horizontal"
                android:src="@drawable/shopit_logo_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_48"
                android:fontFamily="@font/montserrat_bold"
                android:text="OTP Verification"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/color4"
                app:layout_constraintTop_toBottomOf="@id/shopit_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_2"
                app:layout_constraintTop_toBottomOf="@id/tv_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:text="Enter OTP sent to"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/montserrat_medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_2.1"
                app:layout_constraintTop_toBottomOf="@id/tv_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:text="example@gmail.com"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/montserrat_medium"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/sp_16"
                android:text="Enter 6 digit OTP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_2.1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_OTP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp_24">

                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/otp_background"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_weight="1"
                    android:hint="0"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/otp_background"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:hint="0"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/otp_background"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:hint="0"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/otp_background"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:hint="0"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/otp_background"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:hint="0"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_48"
                    android:background="@drawable/otp_background"
                    android:hint="0"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_resend_OTP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_OTP"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:text="Resend OTP in 00:59 second(s)"
                android:textSize="@dimen/sp_16"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:text="Continue"
                android:id="@+id/btn_continue"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/button_background"
                app:backgroundTint="@null"
                android:textSize="@dimen/sp_16"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_136"
                app:layout_constraintTop_toBottomOf="@id/tv_resend_OTP"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/shopit_logo_4"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopit_logo_4"
                android:src="@drawable/shopit_logo_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_16"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>