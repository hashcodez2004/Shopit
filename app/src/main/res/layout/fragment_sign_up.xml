<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/sign_in_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopit_logo"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/dp_127"
                android:foregroundGravity="center_horizontal"
                android:src="@drawable/shopit_logo_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_48"
                android:fontFamily="@font/montserrat_bold"
                android:text="Get Started"
                android:textSize="@dimen/sp_30"
                android:textColor="@color/color4"
                app:layout_constraintTop_toBottomOf="@id/shopit_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_2"
                app:layout_constraintTop_toBottomOf="@id/tv_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/sign_up_text"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/montserrat_medium"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/sp_24"
                android:layout_marginTop="@dimen/dp_24"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="@dimen/sp_16"
                android:text="Email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_2"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:id="@+id/et_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                android:background="@drawable/button_background1"
                android:hint="example@gmail.com"
                android:paddingHorizontal="@dimen/dp_8"
                android:drawableEnd="@null"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_error_msg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_email"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_6"
                android:text="Invalid Email or Phone No.!"
                android:textColor="@color/color9"
                android:fontFamily="@font/montserrat_medium"
                android:visibility="gone"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:text="Continue"
                android:id="@+id/btn_continue"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/button_background"
                app:backgroundTint="@null"
                android:textSize="@dimen/sp_16"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                app:layout_constraintTop_toBottomOf="@id/tv_error_msg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_3"
                app:layout_constraintTop_toBottomOf="@id/btn_continue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="8dp"
                android:text="Already have an account? Sign In"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/montserrat_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_3"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/rectangle_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="or sign up with"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/montserrat_medium" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/rectangle_1" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:id="@+id/btn_sign_up_with_google"
                app:layout_constraintTop_toBottomOf="@id/ll"
                app:layout_constraintBottom_toBottomOf="@id/shopit_logo_4"
                android:layout_marginBottom="@dimen/dp_88"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_24"
                app:icon="@drawable/google_logo"
                app:iconTint="@null"
                app:iconGravity="textStart"
                android:textColor="@color/color4"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/montserrat_bold"
                android:text="Sign Up with Google"
                app:backgroundTint="@null"
                android:background="@drawable/button_background1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopit_logo_4"
                android:src="@drawable/shopit_logo_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_16"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>